<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.admin.notice">
	
  <insert id="insertNewNotice" parameterType="noticeDTO">
	  <![CDATA[
	    	INSERT INTO T_SHOPPING_NOTICE VALUES(
					#{noticeId},
					#{noticeTitle},
	             	#{noticeContent},
	               	#{noticeWriter},
	                SYSDATE,
	                #{vCount}
	        )
	   ]]>      
  </insert>
  <select id="selectNoticeList" resultType="noticeDto">
		SELECT NOTICE_ID,
				NOTICE_TITLE,
				NOTICE_CONTENT,
				WRITE_TIME
		FROM
				T_SHOPPING_NOTICE
  </select>
  
  <select id="selectNoticeOne" parameterType="int" resultType="noticeDto">
  	SELECT 
  			* 
  	FROM 
  			T_SHOPPING_NOTICE
  	WHERE
  			NOTICE_ID = #{noticeId} 
  </select>
  <update id="updateNotice" parameterType="noticeDto">
	  	UPDATE 
	  			T_SHOPPING_NOTICE
	  	SET
	  			NOTICE_TITLE = #{noticeTitle},
	  			NOTICE_CONTENT = #{noticeContent},
	  			WRITE_TIME = SYSDATE
	  	WHERE
	  			NOTICE_ID = #{noticeId}  
  </update>
  
  <delete id="deleteNotice" parameterType="int">
  		DELETE	FROM 
  				T_SHOPPING_NOTICE
  		WHERE
  				NOTICE_ID = #{noticeId} 
  </delete>
</mapper>

